<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

	<extension
	      point="org.eclipse.ui.commands">
	      <command
	      	 name="Load SPC Resource"
             id="edu.ucar.unidata.uf.viz.spc.loadSPCResource">
	      </command>
	</extension>
	
	<extension
	      point="org.eclipse.ui.handlers">
	      <handler
             commandId="edu.ucar.unidata.uf.viz.spc.loadSPCResource"
             class="edu.ucar.unidata.uf.viz.spc.rsc.handler.SPCResourceLoader">
	      </handler>
	</extension>
	
	<extension
	      point="org.eclipse.ui.menus">
	      <menuContribution
             locationURI="menu:radar">
             <command
                   label="SPC Resource"
                   commandId="com.raytheon.uf.viz.ui.loadbundle">
                   <parameter
                   		 name="bundleFile"
                         value="bundles/spc/resource.xml">
                   </parameter>
             </command>
	      </menuContribution>
	</extension>
	
	<extension
	      point="com.raytheon.viz.ui.contextualMenu">
	    <contextualMenu
	          actionClass="edu.ucar.unidata.uf.viz.spc.ui.OpenSPCInfoAction"
	          capabilityInterface="edu.ucar.unidata.uf.viz.spc.ISPCDataResource"
	          name="SPC info..."
	          sortID="50">
	    </contextualMenu>
	</extension>
	
</plugin>

<beans xmlns="http://www.springframework.org/schema/beans"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd   
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="usgsDecoder" class="edu.ucar.unidata.edex.plugin.usgs.USGSDecoder"/>

    <bean id="usgsDistRegistry" factory-bean="distributionSrv" factory-method="register">
		<constructor-arg ref="usgsPluginName" />
		<constructor-arg value="jms-durable:queue:Ingest.Usgs" />
		<constructor-arg value="true" />
	</bean>
	
	<camelContext id="usgs-camel"
		xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler">
		
		<route id="usgsIngestRoute">
			<from uri="jms-durable:queue:Ingest.Usgs" />
			<setHeader headerName="pluginName">
				<constant>usgs</constant>
			</setHeader>
			<doTry>
				<pipeline>
					<bean ref="stringToFile" />
					<bean ref="usgsDecoder" method="decode" />
					<to uri="direct-vm:persistIndexAlert" />
				</pipeline>
				<doCatch>
					<exception>java.lang.Throwable</exception>
					<to uri="log:usgs?level=ERROR"/>
				</doCatch>
			</doTry>
			
		</route>
	</camelContext>
</beans>

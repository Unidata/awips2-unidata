<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

	<extension
	      point="org.eclipse.ui.commands">
	      <command
	      	 name="Load Streamflow Resource"
             id="edu.ucar.unidata.uf.viz.usgs.loadStreamgaugeResource">
	      </command>
	</extension>
	
	<extension
	      point="org.eclipse.ui.handlers">
	      <handler
             commandId="edu.ucar.unidata.uf.viz.usgs.loadStreamgaugeResource"
             class="edu.ucar.unidata.uf.viz.streamgauge.rsc.handler.StreamgaugeResourceLoader">
	      </handler>
	</extension>
	
	<extension
	      point="org.eclipse.ui.menus">
	      <menuContribution
             locationURI="menu:radar">
             <command
                   label="Streamgauge Resource"
                   commandId="com.raytheon.uf.viz.ui.loadbundle">
                   <parameter
                   		 name="bundleFile"
                         value="bundles/streamgauge/streamgauge.xml">
                   </parameter>
             </command>
	      </menuContribution>
	</extension>
	
		<extension
	      point="com.raytheon.viz.ui.contextualMenu">
	    <contextualMenu
	          actionClass="edu.ucar.unidata.uf.viz.streamgauge.ui.OpenStreamgaugeInfoAction"
	          capabilityInterface="edu.ucar.unidata.uf.viz.streamgauge.StreamgaugeDataResource"
	          name="River Gauge info..."
	          sortID="50">
	    </contextualMenu>
	</extension>
	
</plugin>
